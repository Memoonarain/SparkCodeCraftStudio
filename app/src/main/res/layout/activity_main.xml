<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/drawerLayout"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/white"
            android:titleTextColor="@android:color/white">

            <!-- Toolbar Container -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:padding="8dp">

                <!-- Search Field -->
                <EditText
                    android:id="@+id/toolbar_search"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="8dp"
                    android:layout_toStartOf="@+id/search_icon"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/button_inactive"
                    android:hint="Search"
                    android:paddingStart="20dp"
                    android:padding="8dp"/>

                <ImageView
                    android:id="@+id/search_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_search"
                    android:contentDescription="Search Icon"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <!-- Horizontal ScrollView for Buttons -->
        <HorizontalScrollView
            android:layout_below="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/buttonsLayout">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

                <Button android:id="@+id/button_all" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_active" android:text="All (20)" android:textColor="@android:color/white" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_bookmarked" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Bookmarked" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_classified" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Classified" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_important" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Important" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_family" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Family" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_freinds" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Friends" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>
                <Button android:id="@+id/button_office" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/button_inactive" android:text="Office" android:textColor="@android:color/black" android:padding="10dp" android:layout_margin="5dp"/>

            </LinearLayout>
        </HorizontalScrollView>

        <!-- RecyclerView Categories -->
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/recycler_view_categories"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_below="@id/toolbar"/>

        <!-- Main RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/white"
            android:id="@+id/recycler_view"
            tools:listitem="@layout/item_note"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/buttonsLayout"/>

        <!-- Floating Action Button and TextView -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/round_bg"
            android:padding="5dp"
            android:layout_margin="16dp">

            <TextView
                android:layout_marginStart="5dp"
                android:id="@+id/add_note_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                android:text="Add Note"
                android:textColor="@android:color/white"
                android:padding="8dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add"
                android:contentDescription="Add Note"
                app:tint="@color/white"
                app:backgroundTint="@color/colorAccent"
                android:layout_toEndOf="@+id/add_note_text"
                app:elevation="6dp"/>

        </RelativeLayout>

    </RelativeLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="wrap_content"
        android:background="@color/white"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/drawer_header"/>
</androidx.drawerlayout.widget.DrawerLayout>
